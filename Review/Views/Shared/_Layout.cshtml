    <footer class="bg-dark text-white text-center py-3 mt-4">
        <p>&copy; 2024 Movie Showcase. All Rights Reserved.</p>
        <p>Contact us: <a href="mailto:trankhanh08112004@gmail.com" class="text-white">trankhanh08112004@gmail.com</a></p>
        <div class="social-links">
            <a href="https://www.facebook.com/tranthienkhanh.81104" class="text-white mx-2">Facebook</a>
            <a href="https://www.instagram.com/tranthienkhanh.81104/" class="text-white mx-2">Instagram</a>
        </div>
    </footer>

    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Render section Scripts nếu có -->
    @RenderSection("Scripts", required: false)
</body>
</html>
